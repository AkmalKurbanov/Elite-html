aside.sidebar
  .sidebar__float-block
    mixin category(caption)
      .sidebar__category-block
        .title.title_modify
          h2=caption 
        each item in categoryNews
          .catigory-news
            .catigory-news__desc
              a(href="#")=item.title
              p=item.date
            .catigory-news__preview
              a(href="#")
                img(src=item.img, alt="")
        .btn-wrap.btn-wrap_left
          a.btn(href="#") Башкалар
    +category('Спорт')
    +category('Медицина')
    +category('Экономика')

